<section class="jumbotron text-center bg-yellow">
<div class="container text-left ">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
      <br />
      <br />
      <h2 class="text-darker-yellow"><%= title.upcase %></h2>
        <p class="lead text-muted text-darker-yellow">
          <% if local_assigns.has_key? :sub_title %>
            <%= sub_title.html_safe %> <br />
          <% end %>
          <% if local_assigns.has_key? :link_to_petition %>
            <%= link_to t("go_to_the_petition"), open_letter_path %>
          <% end %>
        </p>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12 text-center">
        <%= image_tag "k30years", class: "img-fluid mx-auto max-height-300" %>
    </div>
  </div>
</div>
